<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:id="@+id/txtImgProductInCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/imagegiay"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/duocpham">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtComesticNameInCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comestic Name"
                android:textSize="25sp"
                android:textStyle="bold">

            </TextView>

            <LinearLayout
                android:id="@+id/lnQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnTru"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/icon_btnpink"
                    android:focusable="false"
                    android:text="-"
                    android:textSize="30sp"
                    android:textStyle="bold">

                </Button>

                <TextView
                    android:id="@+id/txtViewQuantity"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="30sp"
                    android:textStyle="bold">

                </TextView>

                <Button
                    android:id="@+id/btnCong"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/icon_btnpink"
                    android:focusable="false"
                    android:text="+"

                    android:textSize="30sp"
                    android:textStyle="bold">

                </Button>
            </LinearLayout>

            <TextView
                android:id="@+id/textgiagiay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Price"
                android:textAlignment="center"
                android:textSize="15sp">

            </TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>