<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/original"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtLastName"
        android:layout_width="156dp"
        android:layout_height="42dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="296dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColorHint="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtUserName2"
        android:layout_width="299dp"
        android:layout_height="47dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="404dp"
        android:drawableLeft="@drawable/iconfinder_mail"
        android:ems="10"
        android:hint="Email Adress"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtUserName"
        android:layout_width="299dp"
        android:layout_height="49dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="348dp"
        android:drawableLeft="@drawable/iconfinder_user"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="299dp"
        android:layout_height="47dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="460dp"
        android:drawableLeft="@android:drawable/ic_secure"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="604dp"
        android:fontFamily="@font/aclonica"
        android:text="Create Account"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtFirstName"
        android:layout_width="131dp"
        android:layout_height="41dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="296dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtPassword2"
        android:layout_width="299dp"
        android:layout_height="47dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="516dp"
        android:drawableLeft="@drawable/iconfinder_icons_password"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="231dp"
        android:layout_height="63dp"
        android:fontFamily="@font/aclonica"
        android:freezesText="true"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309" />

</androidx.constraintlayout.widget.ConstraintLayout>