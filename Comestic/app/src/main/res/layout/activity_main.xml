<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:text="@string/main"
    android:textSize="50sp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    android:shape="rectangle">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_frame">

            <!--        app:layout_behavior="@string/appbar_scrolling_view_behavior"-->

            <RelativeLayout
                android:id="@+id/headerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backround1"
                android:orientation="vertical">


                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"/>

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/videoView"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_edittext"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/cardView_sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/item_make_up"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_edittext"
                            app:cardBackgroundColor="?attr/colorControlHighlight"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp" />

                        <Button
                            android:id="@+id/btnMakeUp"
                            android:layout_width="95dp"
                            android:layout_height="90dp"
                            android:background="@drawable/unnamed"
                            android:foreground="@drawable/iconmakup2" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            app:cardBackgroundColor="?attr/colorControlHighlight"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="0dp">

                            <Button
                                android:id="@+id/btnHerbal"
                                android:layout_width="95dp"
                                android:layout_height="90dp"
                                android:background="@drawable/unnamed"
                                android:foreground="@drawable/herbalcon" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            app:cardBackgroundColor="?attr/colorControlHighlight"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <Button
                                android:id="@+id/btnPerfume"
                                android:layout_width="95dp"
                                android:layout_height="90dp"
                                android:background="@drawable/unnamed"
                                android:foreground="@drawable/perfume" />
                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cardView_sp1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp"
                        tools:ignore="UselessParent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            app:cardBackgroundColor="?attr/colorControlHighlight"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <Button
                                android:id="@+id/btnSkinCare"
                                android:layout_width="95dp"
                                android:layout_height="90dp"
                                android:background="@drawable/unnamed"
                                android:foreground="@drawable/iconskincare" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            app:cardBackgroundColor="?attr/colorControlHighlight"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <Button
                                android:id="@+id/btnOil"
                                android:layout_width="95dp"
                                android:layout_height="90dp"
                                android:background="@drawable/unnamed"
                                android:foreground="@drawable/iconoil" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"

                            app:cardBackgroundColor="?attr/colorControlHighlight"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <Button
                                android:id="@+id/btnComesticDevide"
                                android:layout_width="95dp"
                                android:layout_height="90dp"
                                android:background="@drawable/unnamed"
                                android:foreground="@drawable/salondevide" />
                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                </LinearLayout>


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="239dp"
                    android:layout_below="@+id/content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </RelativeLayout>

    </FrameLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="bottom"
        android:translationY="8dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_nav"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:itemBackground="@color/colorPrimaryDark"
            app:itemHorizontalTranslationEnabled="true"
            app:labelVisibilityMode="unlabeled"
            app:itemIconTint="@color/nav_items"
            app:itemTextColor="@color/nav_items"
            app:menu="@menu/navbottom_items" />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>