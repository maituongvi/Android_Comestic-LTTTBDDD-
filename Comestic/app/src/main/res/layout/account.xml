<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:text="@string/main"
    android:textSize="50sp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    android:shape="rectangle">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/account_fragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@android:color/darker_gray"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/txtViewAccountName"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/aclonica"
                    android:freezesText="true"
                    android:text="@string/nav_account"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>


            <EditText
                android:id="@+id/txtName"
                android:layout_width="376dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:inputType="textPersonName"
                android:text="Name"
                android:layout_below="@+id/linearayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtAddress"
                android:layout_width="376dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txtName"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtPhoneNumber"
                android:layout_width="376dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txtAddress"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/editEmail"
                android:layout_width="376dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txtPhoneNumber"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="199dp"
                android:layout_height="34dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/editEmail"
                android:text="Change password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />


            <EditText
                android:id="@+id/txtNewPass"
                android:layout_width="371dp"
                android:layout_height="51dp"
                android:layout_below="@+id/checkBox"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Enter your  new password"
                android:inputType="textPassword"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtNewPass2"
                android:layout_width="371dp"
                android:layout_height="51dp"
                android:layout_below="@+id/txtNewPass"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Cornfirm your new password"
                android:inputType="textPassword"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnUpdateAccount"
                android:layout_width="184dp"
                android:layout_height="55dp"
                android:layout_below="@id/txtNewPass2"
                android:layout_marginStart="113dp"
                android:layout_marginLeft="113dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:text="Update"
                android:textColor="@color/colorSearch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="bottom"
        android:translationY="7dp">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/account_nav"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:itemBackground="@color/colorPrimaryDark"
            app:itemHorizontalTranslationEnabled="true"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/nav_items"
            app:itemTextColor="@color/nav_items"
            app:menu="@menu/navbottom_items"
            />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>